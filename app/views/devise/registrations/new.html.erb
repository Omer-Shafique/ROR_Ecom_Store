<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #e9f7ff;">
    <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%; border-radius: 15px; background-color: #ffffff;">
        <h2 class="text-center text-primary mb-4" style="font-weight: 700; font-size: 24px;">Sign Up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group my-3">
            <%= f.text_field :first_name, class: "form-control p-3", placeholder: "First Name", autofocus: true, style: "border-radius: 10px; border: 1px solid #ddd;" %>
        </div>

        <div class="form-group my-3">
            <%= f.text_field :last_name, class: "form-control p-3", placeholder: "Last Name", style: "border-radius: 10px; border: 1px solid #ddd;" %>
        </div>

        <div class="form-group my-3">
            <%= f.date_select :date_of_birth, { start_year: 1900, end_year: Time.now.year - 18 }, { class: "form-control p-3", style: "border-radius: 10px; border: 1px solid #ddd;" } %>
        </div>

        <div class="form-group my-3">
            <%= f.email_field :email, autocomplete: "email", class: "form-control p-3", placeholder: "Email", style: "border-radius: 10px; border: 1px solid #ddd;" %>
        </div>

        <div class="form-group my-3">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control p-3", placeholder: "Password (6 characters minimum)", style: "border-radius: 10px; border: 1px solid #ddd;" %>
        </div>

        <div class="form-group my-3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control p-3", placeholder: "Confirm Password", style: "border-radius: 10px; border: 1px solid #ddd;" %>
        </div>


        <div class="text-center">
            <%= f.submit "Sign Up", class: "btn btn-primary btn-lg w-100 mt-3", style: "border-radius: 10px; padding: 12px;" %>
        </div>
        <% end %>

        <div class="text-center mt-4">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
    }

    .container {
        padding-top: 60px;
    }

    .card {
        background-color: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        font-size: 16px;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ddd;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: #fff;
        font-weight: 600;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .text-primary {
        color: #007bff;
    }

    .text-center {
        text-align: center;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .shadow-lg {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .p-3 {
        padding: 1rem;
    }

    .mt-3 {
        margin-top: 1.5rem;
    }

    .mt-4 {
        margin-top: 2rem;
    }
</style>