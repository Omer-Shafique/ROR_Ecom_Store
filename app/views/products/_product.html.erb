<% if product.user == current_user %>
  <div class="container mt-5">
    <div class="card shadow-lg p-4" style="border-radius: 12px; background-color: #f9f9f9;">
      <h2 class="text-center text-primary mb-4" style="font-weight: 600; letter-spacing: 0.8px;">Product Details</h2>

      <!-- Product Details Section -->
      <div class="row g-4">
        <!-- Product Images Section -->
        <div class="col-md-6">
          <div id="productImageCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner rounded shadow-sm">
              <div class="carousel-item active">
                <img src="https://images.unsplash.com/photo-1522115174737-2497162f69ec?q=80&w=1769&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Product Image 1" class="d-block w-100">
              </div>
              <div class="carousel-item">
                <img src="https://plus.unsplash.com/premium_photo-1679913792906-13ccc5c84d44?q=80&w=1770&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Product Image 2" class="d-block w-100">
              </div>
              <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?q=80&w=1999&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Product Image 3" class="d-block w-100">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#productImageCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#productImageCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon"></span>
            </button>
          </div>
        </div>

        <!-- Product Info Section -->
        <div class="col-md-6">
          <h3 class="mb-3" style="font-size: 1.5rem; font-weight: bold; color: #333;"><%= product.product_title %></h3>
          <p class="text-muted" style="font-size: 1rem;"><%= product.product_description %></p>

          <div class="mt-4">
            <div class="mb-2">
              <strong>Price: </strong>
              <span style="color: #28a745;">$<%= product.price.present? ? product.price : "N/A" %></span>
            </div>
            <div class="mb-2">
              <strong>SKU: </strong>
              <span><%= product.product_sku.present? ? product.product_sku : "N/A" %></span>
            </div>
            <div class="mb-2">
              <strong>Stock: </strong>
              <span class="text-success"><%= product.stock_quantity_string.present? ? product.stock_quantity_string : "2" %></span>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="d-flex mt-4">
            <%= link_to "Back to Products", products_path, class: "btn btn-outline-secondary me-2" %>
            <%= link_to "Wishlist", "#", class: "btn btn-outline-danger me-2" %>
            <%= link_to "Buy Now", checkout_product_path(product), class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

