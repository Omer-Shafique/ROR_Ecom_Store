<%= form_with(model: product, class: "product-form shadow-lg p-4 rounded") do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger mb-4">
      <h4 class="alert-heading"><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h4>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.text_field :product_title, class: "form-control form-control-lg shadow-sm", placeholder: "Enter Product Title", aria: { label: "Product Title" } %>
  </div>

  <div class="form-group mb-3">
    <%= form.text_area :product_description, class: "form-control form-control-lg shadow-sm", placeholder: "Enter Product Description", rows: 4, aria: { label: "Product Description" } %>
  </div>

  <div class="form-group mb-3">
    <%= form.text_field :product_sku, class: "form-control form-control-lg shadow-sm", placeholder: "Enter Product SKU", aria: { label: "Product SKU" } %>
  </div>

  <div class="form-group mb-3">
    <%= form.text_field :stock_quantity_string, class: "form-control form-control-lg shadow-sm", placeholder: "Enter Stock Quantity", aria: { label: "Stock Quantity" } %>
  </div>

  <div class="form-group mb-3">
    <%= form.number_field :user_id, id: :product_user_id, class: "form-control form-control-lg shadow-sm", value: current_user.id, type: "hidden" %>
  </div>

  <div class="form-group mb-3">
    <%= form.text_field :price, class: "form-control form-control-lg shadow-sm", placeholder: "Enter Product Price", aria: { label: "Product Price" } %>
  </div>

  <div class="text-center">
    <%= form.submit "Save Product", class: "btn btn-success btn-lg px-5 py-3  shadow-sm" %>
  </div>
<% end %>