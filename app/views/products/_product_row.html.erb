<tr style="background-color: #ffffff; transition: background 0.3s;">
  <td><%= render_product_image(product) %></td>
  <td style="padding: 12px; font-weight: bold;">
    <%= link_to product.product_title, product, class: "text-decoration-none text-primary" %>
  </td>
  <td style="padding: 12px; color: #555;"><%= product.product_description %></td>
  <td style="padding: 12px; font-weight: bold; color: #333;"><%= product.product_sku %></td>
  <td style="padding: 12px; color: #28a745; font-weight: bold;"><%= product.stock_quantity_string %></td>
  <td style="padding: 12px; color: #28a745; font-weight: bold;"><%= product.price %></td>
  <td style="padding: 12px;">
    <% if current_user.admin? %>
      <%= render_admin_actions(product) %>
    <% else %>
      <%= render_user_actions(product) %>
    <% end %>
  </td>
</tr>
