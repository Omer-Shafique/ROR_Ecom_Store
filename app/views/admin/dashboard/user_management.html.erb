<h1 class="text-center mb-4">User Management</h1>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-primary mb-3">Users</h3>
      <% if @users.present? %>
        <div class="table-responsive">
          <table class="table table-striped table-bordered">
            <thead class="thead-dark">
              <tr>
                <th>User ID</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr id="user-<%= user.id %>">
                  <td><%= user.id %></td>
                  <td><%= user.email %></td>
                  <td class="role"><%= user.admin? ? 'Admin' : 'User' %></td>
                  <td class="actions"><%= display_user_actions(user) %></td>
                </tr>
              <% end %>
            </tbody>

          </table>
        </div>
      <% else %>
        <p class="alert alert-warning">No users found.</p>
      <% end %>
    </div>
  </div>
</div>
