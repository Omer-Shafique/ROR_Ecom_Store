<h3>Orders</h3>
<table class="table">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>User</th>
      <th>Total Price</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.user.email %></td>
        <td><%= order.total_price %></td>
        <td><%= order.status %></td>
        <td>
          <%# <%= link_to "View", admin_order_path(order), class: "btn btn-info btn-sm" %> %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
